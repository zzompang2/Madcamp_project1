<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.example.project1">
	<!-- 갤러리 사용 권한 -->
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- 주소록 사용 권한 -->
	<uses-permission android:name="android.permission.READ_CONTACTS" />
	<uses-permission android:name="android.permission.WRITE_CONTACTS" />
	<uses-permission android:name="android.permission.CALL_PHONE" />

	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_appicon"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/ic_appicon_round"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">

		<activity
			android:name=".SplashActivity"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
			android:screenOrientation="portrait">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:name=".MainActivity" />
		<activity android:name=".TodoDetailActivity"
			android:theme="@style/FullscreenTheme"/>
		<activity android:name=".profile_description"/>

	</application>

</manifest>